# Enable password authentication for SSH
write_files:
  - path: /etc/cloud/cloud.cfg.d/90_enable_ssh_pwauth.cfg
    content: |
      runcmd:
        - sed -i "s/^PasswordAuthentication.*/PasswordAuthentication yes/" /etc/ssh/sshd_config
        - systemctl restart sshd
